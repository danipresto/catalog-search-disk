#!/bin/bash

#colocar o codigo do disco (c ,d , e , etc...)
list=$(find /$1/contratos/ -mindepth 1 -maxdepth 1 -type d)

#La√ßo para criar um csv para cada pasta dentro de contratos
for c in ${list[@]};
do
     readarray -d "/" -t name <<<"$c"
     find $c -type f -printf '%p,\n' >> "${name[-1]}".csv
done
